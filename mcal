#!/usr/bin/env bash

# Display and modify calendar events stored in local text files.

cal_dir=~/sync/cal

case $1 in
	"e") (cd $cal_dir && vim -c FZF) ;;
	"t") cat "$cal_dir"/* | grep $(date +%Y-%m-%d) | sort ;;
	"m") cat "$cal_dir"/* <(echo $(date +"%Y-%m-%d %a") === TODAY ===) | grep $(date +%Y-%m) | sort ;;
	"") cat "$cal_dir"/* <(echo $(date +"%Y-%m-%d %a") === TODAY ===) | sort ;;
esac
