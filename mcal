#!/usr/bin/env bash

# Display and modify calendar events stored in local text files.

cal_dir="$HOME/sync/cal"

[[ $1 == "e" ]] && (cd ${cal_dir} && nvim -c FZF) && exit

today="$(date +"%Y-%m-%d %a %H:%M")       === TODAY ==="

case $1 in
	"t") (cat $cal_dir/* && printf "%s\n" "$today") | sort | grep --color=auto $(date +%Y-%m-%d) ;;
	"m") (cat $cal_dir/* && printf "%s\n" "$today") | sort | grep --color=auto $(date +%Y-%m) ;;
	"") (cat $cal_dir/* && printf "%s\n" "$today") | sort ;;
	*) (cat $cal_dir/* && printf "%s\n" "$today") | sort | grep --color=auto ${@:1} ;;
esac
