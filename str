#!/usr/bin/env bash

data_dir="$HOME/sync/str"
program_dir="$HOME/scripts"
width="61"
selected_date="${1-$(date -I)}"
weekday="$(date --date=$selected_date +%a)"

awk -v date="$selected_date" -v weekday="$weekday" -f "$program_dir"/header.awk <(grep "$selected_date" "$data_dir"/header.tsv)
awk -f "$program_dir"/main.awk <(grep "$selected_date" "$data_dir"/main.csv)
awk -f "$program_dir"/notes.awk <(fmt --width="$width" <(awk -F '\t' -v date="$selected_date" '$1~date{print $2}' "$data_dir"/notes.tsv))
